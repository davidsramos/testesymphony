{% extends 'base.html.twig' %}

{% block body %}
    <a href="/cliente/create" class="btn btn-primary">Novo Cliente</a>
    <hr>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Cliente</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for cliente in clientes %}
            <tr>
                <th scope="row">{{ cliente.id }}</th>
                <td>{{ cliente.nomePessoa }}</td>
                <td>{{ cliente.dataNascimento|date('d/m/Y') }}</td>
                <td>
                    <a href="/cliente/edit/{{ cliente.id }}" class="btn btn-warning">                        
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </a>
                    <a href="/cliente/delete/{{ cliente.id }}" class="btn btn-danger">                        
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>    
            {% endfor %}       
        </tbody>
    </table>
{% endblock %}